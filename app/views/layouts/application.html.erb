<!DOCTYPE html>
<html>
  <head>
    <title>BigGoal</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= render 'layouts/seo' %>
    <link href="https://fonts.googleapis.com/css?family=Oxygen+Mono|Oxygen:300,400,700" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="wrapper">

        <% if user_signed_in? %>
          <%= link_to('Home', root_path) %>
          <%= link_to('Custom Messages', custom_messages_path) %>
          
          <% if current_user.admin? %>
            <%= link_to('Default Messages', default_messages_path) %>
          <% end %>
          
          <%= link_to('Profile', profile_path(current_user.profile)) %>
          <%= link_to('Logout User', destroy_user_session_path, :method => :delete) %>
        <% else %>
          <%= link_to('Login User', new_user_session_path)  %> 
        <% end %>
      
      </nav>
    </header>
    
    <section class="wrapper">
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </section>

    <footer>
      <div class="wrapper">
        <p>&copy; Robin Hamill <%= Date.today.year %></p>
      </div>
    </footer>
  </body>
</html>
