<div class="card">
  <p id="notice"><%= notice %></p>
  
  <h1>Custom Messages</h1>
  
  <div class="messageTable">
    <div class="flexTable">
      <% @custom_messages.each do |custom_message| %>
        <div class="flexRow">
          <div><%= custom_message.message %></div>
          <div class="tableBtn">
            <%= link_to 'Edit', edit_custom_message_path(custom_message), class: "btn" %>
            <%= link_to 'Delete', custom_message, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn--red" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
  <br>
  
  <div class="actions">
    <%= link_to 'New Custom Message', new_custom_message_path, class: "btn btn--rounded btn--green" %>
  </div>
  <%= link_to 'Back', goals_path %>
</div>