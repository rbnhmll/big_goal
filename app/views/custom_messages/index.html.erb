<p id="notice"><%= notice %></p>

<h1>Custom Messages</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @custom_messages.each do |custom_message| %>
      <tr>
        <td><%= custom_message.message %></td>
        <td><%= link_to 'Show', custom_message %></td>
        <td><%= link_to 'Edit', edit_custom_message_path(custom_message) %></td>
        <td><%= link_to 'Destroy', custom_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Custom Message', new_custom_message_path %>
