<div class="card">
  <p id="notice"><%= notice %></p>
  
  <h1>Default Messages</h1>
  
  <div class="messageTable">
    <div class="flexTable">
      <% @default_messages.each do |default_message| %>
        <div class="flexRow">
          <div><%= default_message.message %></div>
          <div class="tableBtn">
            <%= link_to 'Edit', edit_default_message_path(default_message), class: "btn" %>
            <%= link_to 'Delete', default_message, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn--red" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
  <br>
  
  <%= link_to 'New Default Message', new_default_message_path, class: "btn btn--rounded btn--green" %>
</div>