<div class="card">
  <p id="notice"><%= notice %></p>
  
  <h1>Goals</h1>
  
  <table>
    <thead>
      <tr>
        <th>Goal name</th>
        <th>Deadline</th>
        <th>Complete?</th>
        <th colspan="4"></th>
      </tr>
    </thead>
    <tbody>
      <% @goals.each do |goal| %>
        <tr class="
        <% if goal.current_goal? %>
          currentGoal
        <% end %>
        ">
          <td><%= goal.goal_name %></td>
          <td><%= goal.deadline.strftime("%A %B %d %Y@ %I:%M%p") %></td>
          <td><%= goal.complete %></td>
          <td><%= link_to 'Show', goal, class: "btn" %></td>
          <td><%= link_to 'Edit', edit_goal_path(goal), class: "btn" %></td>
          <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn--red" %></td>
          <td><% if goal.current_goal %><strong>Current Goal</strong><% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  
  <%= link_to 'New Goal', new_goal_path, class: "btn btn--rounded btn--green" %>
</div>